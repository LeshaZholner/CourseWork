<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WebApp.Client.Views.ChangePasswordPage"
              xmlns:vm="clr-namespace:WebApp.Client.ViewModels">
    <ContentPage.BindingContext>
        <vm:ChangePasswordViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding ChangePassword.OldPassword}"
               Placeholder="old password"
               IsPassword="True"
               AutomationId="oldpassword">
            </Entry>
            <Entry Text="{Binding ChangePassword.NewPassword}"
               Placeholder="new password"
               IsPassword="True"
               AutomationId="newpassword">
            </Entry>
            <Entry Text="{Binding ChangePassword.ConfirmPassword}"
               Placeholder="confirm password"
               IsPassword="True"
               AutomationId="confirmPassword">
            </Entry>
            <Button Text="Save" Command="{Binding ChangePasswordCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>